{
  "name": "node-service-starter",
  "version": "1.0.0",
  "description": "node backend service starter",
  "main": "index.js",
  "repository": "git@github.com:el-ground/node-service-starter.git",
  "author": "<jwjang@elground.com>",
  "license": "MIT",
  "engines": {
    "node": "16"
  },
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "package": "yarn clean && tsc --project tsconfig.src.json --skipLibCheck",
    "package:listen": "yarn clean && tsc --project tsconfig.src.json --watch --skipLibCheck",
    "dev": "cross-env PORT=9021 HTTPS_PORT=9644 NODE_ENV=development CERT=$DEV_CERT CERT_KEY=$DEV_CERT_KEY nodemon dist/src/index.js",
    "check-types": "tsc --project tsconfig.src.json --skipLibCheck",
    "lint": "eslint  'src/**/*.{js,ts}' --quiet --fix",
    "prettier": "prettier 'src/**/*.{js,ts}' --list-different --write",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage --passWithNoTests",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watchAll --coverage --passWithNoTests",
    "start": "cross-env NODE_ENV=production node dist/src/index.js",
    "predeploy": "yarn run clean && yarn run package",
    "deploy": "gcloud app deploy $DEPLOYMENT_TYPE.yaml"
  },
  "imports": {
    "#src/*": "./dist/src/*.js",
    "#framework/*": "./dist/src/framework/*.js",
    "#routers/*": "./dist/src/routers/*.js",
    "#model/*": "./dist/src/model/*.js"
  },
  "devDependencies": {
    "@types/cls-hooked": "^4.3.3",
    "@types/compression": "^1.7.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-request-id": "^1.4.2",
    "@types/ip": "^1.1.0",
    "@types/jest": "^27.0.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.7",
    "@types/node-fetch": "^3.0.3",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "chokidar-cli": "^3.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "cls-hooked": "^4.2.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-request-id": "^1.4.1",
    "ip": "^1.1.5",
    "morgan": "^1.10.0",
    "node-fetch": "^3.1.0",
    "source-map-support": "^0.5.19",
    "winston": "^3.3.3"
  }
}
