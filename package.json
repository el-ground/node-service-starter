{
  "name": "node-service-starter",
  "version": "1.0.0",
  "description": "node backend service starter",
  "main": "index.js",
  "repository": "git@github.com:el-ground/node-service-starter.git",
  "author": "<jwjang@elground.com>",
  "license": "MIT",
  "engines": {
    "node": "12"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "package": "tsc --skipLibCheck",
    "package:listen": "yarn run clean && tsc --watch --skipLibCheck",
    "dev": "PORT=9021 HTTPS_PORT=9644 NODE_ENV=development CERT=$DEV_CERT CERT_KEY=$DEV_CERT_KEY nodemon dist/src/index.js",
    "check-types": "tsc --skipLibCheck",
    "lint": "eslint  'src/**/*.{js,ts}' --quiet --fix",
    "prettier": "prettier 'src/**/*.{js,ts}' --list-different --write",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watchAll --coverage --passWithNoTests",
    "start": "NODE_ENV=production node dist/src/index.js",
    "predeploy": "yarn run clean && yarn run package",
    "deploy": "gcloud app deploy $DEPLOYMENT_TYPE.yaml"
  },
  "jest": {
    "setupFiles": [
      "./scripts/jest.setup.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/src/**/*.+(ts|js).js"
    ]
  },
  "_moduleAliases": {
    "@src": "dist/src",
    "@framework": "dist/src/framework",
    "@routers": "dist/src/routers",
    "@model": "dist/src/model"
  },
  "devDependencies": {
    "@types/cls-hooked": "^4.3.3",
    "@types/compression": "^1.7.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-request-id": "^1.4.2",
    "@types/ip": "^1.1.0",
    "@types/jest": "^27.0.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "12",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "chokidar-cli": "^3.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "cls-hooked": "^4.2.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-request-id": "^1.4.1",
    "ip": "^1.1.5",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "source-map-support": "^0.5.19",
    "winston": "^3.3.3"
  }
}
